{
  "name": "graphql-ts-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "dotenv -- ts-node-dev --respawn src/index.ts",
    "debug": "dotenv -- nodemon -e ts,graphql -x ts-node-dev --inspect src/index.ts",
    "build": "tsc -p ./",
    "build:run": "NODE_ENV=production node dist/src/index.js",
    "test": "yarn run db:setup && dotenv -- jest --verbose",
    "db:setup": "ts-node src/test-utils/setup.ts",
    "db:seed": "ts-node src/tasks/db/seed.ts",
    "lint": "eslint './src/**/*'",
    "format": "yarn run prettier -- --write",
    "prettier": "prettier \"**/*.+(js|ts|md|mdx|graphql|gql|json|yml|yaml)\"",
    "validate": "yarn run lint && yarn run prettier -- --list-different",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@types/faker": "^5.5.9",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "7.21.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.4.1",
    "faker": "^5.5.3",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^26.5.6",
    "ts-node": "9.1.1",
    "ts-node-dev": "^1.1.8"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "^0.0.16",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/graphql-upload": "^8.0.11",
    "@types/ioredis": "^4.28.8",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^14.18.12",
    "@types/nodemailer": "^6.4.4",
    "@types/uuid": "^8.3.4",
    "apollo-server": "^3.12.0",
    "apollo-server-express": "^2.25.3",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.2",
    "connect-redis": "^5.2.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "dotenv": "^8.6.0",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "graphql": "15.5.0",
    "graphql-query-complexity": "^0.7.2",
    "graphql-upload": "^11.0.0",
    "ioredis": "^4.28.5",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.7.2",
    "pg": "8.5.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "1.1.1",
    "typeorm": "^0.2.43",
    "typescript": "^4.5.5",
    "uuid": "^8.3.2"
  }
}
