{
  "name": "graphql-ts-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "dotenv -- ts-node-dev --respawn src/index.ts",
    "debug": "dotenv -- nodemon -e ts,graphql -x ts-node-dev --inspect src/index.ts",
    "build": "tsc -p ./",
    "build:run": "NODE_ENV=production node dist/src/index.js",
    "test": "yarn run db:setup && dotenv -- jest --verbose",
    "db:setup": "ts-node src/test-utils/setup.ts",
    "db:seed": "ts-node src/tasks/db/seed.ts",
    "lint": "eslint './src/**/*'",
    "format": "yarn run prettier -- --write",
    "prettier": "prettier \"**/*.+(js|ts|md|mdx|graphql|gql|json|yml|yaml)\"",
    "validate": "yarn run lint && yarn run prettier -- --list-different",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@types/faker": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "7.21.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.4.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node": "9.1.1",
    "ts-node-dev": "^1.1.6"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "^0.0.16",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/ioredis": "^4.22.0",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.31",
    "@types/nodemailer": "^6.4.0",
    "@types/shortid": "^0.0.29",
    "@types/uuid": "^8.3.0",
    "apollo-server": "^2.21.0",
    "apollo-server-express": "^2.21.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.1",
    "connect-redis": "^5.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "graphql": "15.5.0",
    "graphql-query-complexity": "^0.7.2",
    "graphql-upload": "^11.0.0",
    "ioredis": "^4.23.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.5.0",
    "pg": "8.5.1",
    "reflect-metadata": "^0.1.10",
    "shortid": "^2.2.16",
    "type-graphql": "1.1.1",
    "typeorm": "^0.2.31",
    "typescript": "^4.2.3",
    "uuid": "^8.3.2"
  }
}
