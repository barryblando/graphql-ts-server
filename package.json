{
	"name": "graphql-ts-server",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"start": "dotenv -- nodemon -e ts,graphql -x ts-node-dev src/index.ts",
		"debug": "dotenv -- nodemon -e ts,graphql -x ts-node-dev --inspect src/index.ts",
		"build": "rimraf build/ && tsc -p ./",
		"build:run": "dotenv node build",
		"test": "yarn run db:setup && dotenv -- jest --verbose",
		"db:setup": "ts-node src/test-utils/setup.ts",
		"db:seed": "ts-node-dev src/tasks/db/seed.ts",
		"lint": "eslint './src/**/*'",
		"format": "yarn run prettier -- --write",
		"prettier": "prettier \"**/*.+(js|ts|md|mdx|graphql|gql|json|yml|yaml)\"",
		"validate": "yarn run lint && yarn run prettier -- --list-different",
		"pre-commit": "lint-staged"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/connect-redis": "^0.0.13",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.6",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.2",
		"@types/express-session": "^1.15.16",
		"@types/faker": "^4.1.9",
		"@types/graphql": "^14.5.0",
		"@types/ioredis": "^4.14.6",
		"@types/jest": "^25.1.1",
		"@types/jsonwebtoken": "^8.3.7",
		"@types/node": "^13.7.0",
		"@types/nodemailer": "^6.4.0",
		"@types/shortid": "^0.0.29",
		"@types/uuid": "^3.4.7",
		"@typescript-eslint/eslint-plugin": "^2.19.0",
		"@typescript-eslint/parser": "^2.19.0",
		"eslint": "6.8.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-prettier": "^3.1.2",
		"faker": "^4.1.0",
		"husky": "^4.2.1",
		"jest": "^25.1.0",
		"lint-staged": "^10.0.7",
		"nodemon": "^2.0.2",
		"prettier": "^1.19.1",
		"ts-jest": "^25.2.0",
		"ts-node": "8.6.2",
		"ts-node-dev": "^1.0.0-pre.44",
		"typescript": "^3.7.5"
	},
	"dependencies": {
		"apollo-server": "^2.9.16",
		"apollo-server-express": "^2.9.16",
		"bcryptjs": "^2.4.3",
		"class-validator": "^0.11.0",
		"cloudinary": "^1.19.0",
		"connect-redis": "^4.0.4",
		"cookie-parser": "^1.4.4",
		"cors": "^2.8.5",
		"dataloader": "^2.0.0",
		"express": "^4.17.1",
		"express-session": "^1.17.0",
		"graphql": "^14.6.0",
		"graphql-query-complexity": "^0.4.1",
		"graphql-upload": "^10.0.0",
		"ioredis": "^4.14.1",
		"jsonwebtoken": "^8.5.1",
		"nodemailer": "^6.4.2",
		"pg": "7.18.1",
		"reflect-metadata": "^0.1.10",
		"shortid": "^2.2.15",
		"type-graphql": "0.18.0-beta.9",
		"typeorm": "^0.2.22",
		"uuid": "^3.4.0"
	},
	"resolutions": {
		"**/**/fs-capacitor": "^5.0.0",
		"**/graphql-upload": "^9.0.0"
